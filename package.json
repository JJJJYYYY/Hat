{
  "name": "hat",
  "version": "0.1.0",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "node scripts/verify-commit-msg.js"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ],
    "*.less": [
      "stylelint --fix",
      "git add"
    ]
  },
  "scripts": {
    "start": "react-app-rewired start --scripts-version react-scripts-ts --config-overrides ./scripts/config-overrides.js",
    "build": "react-app-rewired build --scripts-version react-scripts-ts --config-overrides ./scripts/config-overrides.js",
    "test": "react-app-rewired test --env=jsdom --scripts-version react-scripts-ts"
  },
  "dependencies": {
    "antd": "^3.10.4",
    "react": "16.4.2",
    "react-dom": "16.4.2",
    "react-redux": "^5.1.0",
    "react-scripts-ts": "3.1.0",
    "redux": "^4.0.1"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.2",
    "@types/prop-types": "^15.5.6",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "husky": "^1.1.3",
    "less": "^3.5.3",
    "less-loader": "^4.1.0",
    "lint-staged": "^7.2.0",
    "react-app-rewire-less": "^2.1.2",
    "react-app-rewired": "^1.5.2",
    "redux-devtools": "^3.4.1",
    "stylelint": "^9.3.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^0.8.1",
    "stylelint-webpack-plugin": "^0.10.5",
    "ts-import-plugin": "^1.5.5",
    "tslint-config-standard": "^7.1.0",
    "typescript": "^3.1.6",
    "webpack-merge": "^4.1.3"
  }
}
